{
    "name": "zorachka/zorachka",
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-apcu": "*",
        "cycle/database": "^2.4",
        "cycle/migrations": "^4.0",
        "cycle/schema-migrations-generator": "^2.1",
        "doctrine/migrations": "^3.6",
        "doctrine/sql-formatter": "^1.1",
        "filp/whoops": "^2.15",
        "laminas/laminas-diactoros": "^2.7",
        "laminas/laminas-stdlib": "^3.6",
        "laminas/laminas-stratigility": "^3.9",
        "mezzio/mezzio": "^3.7",
        "mezzio/mezzio-fastroute": "^3.0.3",
        "mezzio/mezzio-helpers": "^5.7",
        "monolog/monolog": "^3.2",
        "php-di/php-di": "^7.0",
        "psr/clock": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/http-message": "^1.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "ramsey/uuid": "^4.7",
        "symfony/console": "^6.2",
        "symfony/mailer": "^6.3",
        "telegram-bot/api": "^2.4",
        "twig/twig": "^3.7",
        "webmozart/assert": "^1.11",
        "yiisoft/cache": "^3.0",
        "yiisoft/db-pgsql": "^1.1"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "symplify/monorepo-builder": "11.2.3.72"
    },
    "autoload": {
        "psr-4": {
            "Zorachka\\Clock\\": [
                "packages/clock/src"
            ],
            "Zorachka\\Console\\": [
                "packages/console/src"
            ],
            "Zorachka\\Container\\": "packages/container/src",
            "Zorachka\\Database\\": [
                "packages/database/src"
            ],
            "Zorachka\\Directories\\": [
                "packages/directories/src"
            ],
            "Zorachka\\Environment\\": [
                "packages/environment/src"
            ],
            "Zorachka\\ErrorHandler\\": [
                "packages/error-handler/src"
            ],
            "Zorachka\\EventDispatcher\\": "packages/event-dispatcher/src",
            "Zorachka\\Framework\\": [
                "packages/mailer/src"
            ],
            "Zorachka\\Http\\": [
                "packages/http/src"
            ],
            "Zorachka\\Logger\\": [
                "packages/logger/src"
            ],
            "Zorachka\\Mailer\\": "packages/mailer/src",
            "Zorachka\\Middleware\\Cors\\": "packages/middleware-cors/src",
            "Zorachka\\NextPackage\\": [
                "packages/next-package/src"
            ],
            "Zorachka\\Telegram\\": [
                "packages/telegram/src"
            ],
            "Zorachka\\Uuid\\": [
                "packages/uuid/src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Zorachka\\Uuid\\": [
                "packages/uuid/tests"
            ],
            "Zorachka\\Clock\\Tests\\": [
                "packages/clock/tests"
            ],
            "Zorachka\\Console\\Tests\\": "packages/console/tests",
            "Zorachka\\Container\\Tests\\": "packages/container/tests",
            "Zorachka\\Database\\Tests\\": [
                "packages/database/tests"
            ],
            "Zorachka\\Directories\\Tests\\": "packages/directories/tests",
            "Zorachka\\Environment\\Tests\\": [
                "packages/environment/tests"
            ],
            "Zorachka\\ErrorHandler\\Tests\\": [
                "packages/error-handler/tests"
            ],
            "Zorachka\\EventDispatcher\\Tests\\": "packages/event-dispatcher/tests",
            "Zorachka\\Framework\\Tests\\": "packages/mailer/tests",
            "Zorachka\\Http\\Tests\\": [
                "packages/http/tests"
            ],
            "Zorachka\\Logger\\Tests\\": "packages/logger/tests",
            "Zorachka\\Mailer\\Tests\\": "packages/mailer/tests",
            "Zorachka\\Middleware\\Cors\\Tests\\": "packages/middleware-cors/tests",
            "Zorachka\\NextPackage\\Tests\\": "packages/next-package/tests",
            "Zorachka\\Telegram\\Tests\\": "packages/telegram/tests"
        }
    },
    "replace": {
        "zorachka/clock": "self.version",
        "zorachka/console": "self.version",
        "zorachka/container": "self.version",
        "zorachka/database": "self.version",
        "zorachka/directories": "self.version",
        "zorachka/environment": "self.version",
        "zorachka/error-handler": "self.version",
        "zorachka/event-dispatcher": "self.version",
        "zorachka/http": "self.version",
        "zorachka/logger": "self.version",
        "zorachka/mailer": "self.version",
        "zorachka/middleware-cors": "self.version",
        "zorachka/next-package": "self.version",
        "zorachka/telegram": "self.version",
        "zorachka/uuid": "self.version"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs.lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs.fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
