{
    "name": "zorachka/zorachka",
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-apcu": "*",
        "php-di/php-di": "^7.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6",
        "symplify/monorepo-builder": "11.2.3.72"
    },
    "autoload": {
        "psr-4": {
            "Zorachka\\Container\\": "packages/container/src",
            "Zorachka\\FirstPackage\\": "packages/first-package/src",
            "Zorachka\\SecondPackage\\": "packages/second-package/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zorachka\\Container\\Tests\\": "packages/container/tests",
            "Zorachka\\FirstPackage\\": "packages/first-package/./tests"
        }
    },
    "replace": {
        "zorachka/container": "self.version",
        "zorachka/first-package": "self.version",
        "zorachka/second-package": "self.version"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs.lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs.fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
